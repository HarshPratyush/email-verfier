<div class="row">
  <div class="col-md-8 offset-2">
    <div class="card">
      <div class="card-header text-center">
        Featured
      </div>
      <div class="card-body">

        <%= form_with url: "/search", method: :get do |form| %>
          <div class="row">
            <div class="col-md-10">
              <%= form.text_field :email, class: "form-control email",placeholder:'Enter email here' %>
              <i class="fa fa-lock" aria-hidden="true"></i>
            </div>

            <div class="col-md-2">
              <%= form.submit "Search",class: "btn btn-default btn-primary" %>
            </div>

          </div>

      <% end %>

      </div>
    </div>
  </div>
</div>